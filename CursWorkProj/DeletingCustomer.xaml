<Window x:Class="CursWorkProj.DeletingCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CursWorkProj"
        mc:Ignorable="d"
        Title="Удаление клиента" Height="200" Width="320">
    <Grid Margin="0,0,0,0">
        <Label Content="Выберите клиента для удаления:" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="CustomerSelector" HorizontalAlignment="Left" Margin="29,64,0,0" VerticalAlignment="Top" Width="259"/>
        <Button x:Name="deleteButton" Content="Удалить" HorizontalAlignment="Center" Margin="0,116,0,0" VerticalAlignment="Top" Width="252" Height="32" Click="deleteButton_Click"/>

    </Grid>
</Window>
